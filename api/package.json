{
  "name": "techzu-api",
  "version": "1.0.0",
  "private": true,
  "description": "Techzu API (Express + Sequelize + Postgres/Neon) - TypeScript",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon",
    "dev:tsx": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "db:migrate": "npm run build && node dist/scripts/migrate.js up",
    "db:migrate:undo": "npm run build && node dist/scripts/migrate.js down"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-http": "^10.5.0",
    "sequelize": "^6.37.5",
    "umzug": "^3.8.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.16",
    "nodemon": "^3.1.9",
    "pino-pretty": "^11.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
